{
  "manifest_version": 2,
  "name": "Unknown words",
  "description": "This extension save notes using context menu",
  "version": "0.0.2",
  "background": {
    "scripts": [
      "main.js", 
      "assets/js/lib.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "assets/html/popup.html"
  },
  "permissions": [
    "contextMenus",
    "unlimitedStorage",
    "storage",
    "browsingData",
    "tabs",
    "alarms",
    "notifications"
  ],
  "icons": {
    "16": "assets/images/16x16_icon.png",
    "48": "assets/images/48x48_icon.png",
    "128": "assets/images/128x128_icon.png"
  }
}
