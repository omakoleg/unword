{
  "manifest_version": 2,
  "name": "Unknown words",
  "description": "Helps to learn words by asking questions",
  "version": "0.0.4",
  "background": {
    "scripts": [
      "js/storage.js",
      "js/notification.js",
      "js/models.js",
      "main.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon128.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "contextMenus",
    "unlimitedStorage",
    "storage",
    "browsingData",
    "tabs",
    "alarms",
    "notifications",
    "file://*/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
